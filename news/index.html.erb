<p id="notice"><%= notice %></p>

<h1>News</h1>

 
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.image %></td>
        <td><%= news.desc %></td>
        <td><%= link_to 'Показать', news %></td>
        <td><%= link_to 'Редактировать', edit_news_path(news) %></td>
        <td><%= link_to 'Удалить', news, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

