<p id="notice"><%= notice %></p>

<h1>News</h1>
<div class="newsBlock">
  
</div>



<table>
 
  <tbody>
    <% @news.each do |news| %>
      <tr data-item_id="<%= news.id %>">
        <td class="newspic" style="background-image: url('<%= news.newspic.thumb.url %>');">
  </td>
        <td><%= news.desc.html_safe %></td>
        <td><%= link_to 'Редактировать', edit_news_path(news) %></td>
        <td><span class="deleteAction">Удалить</span></td>
      </tr>
    <% end %>
  </tbody>
</table> 

<br>

<%= link_to 'Добавить новость', new_news_path %>
