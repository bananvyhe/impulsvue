<p id="notice"><%= notice %></p>

<h1>Libraries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
  
      <th>Desc</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr data-item_id="<%= library.id %>">
        <td><%= library.name %></td>
        <td><%= library.desc %></td>
        <td><a href="<%= library.file %>"><%= File.extname(library.file.to_s)%>  </a></td>
        <td><%= link_to 'Show', library %></td>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <td><span class="deleteAction">Удалить</span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Library', new_library_path %>
