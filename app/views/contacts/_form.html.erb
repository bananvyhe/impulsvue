
<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :mail, label: 'mail:' %>
    <%= f.input :adress %>
    <%= f.input :tel %>
    <%= f.input :map %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, label= "сохранить" %>
  </div>
<% end %>
